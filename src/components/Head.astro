---
interface Props {
  title: string;
  description: string;
  imageUrl?: string;
}

const { title, description, imageUrl = '/images/kevin.jpg' } = Astro.props;
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>

  <meta
    name="keywords"
    content="orealy, orealydev, kevindev, kevintech, orealytech"
  />
  <meta name="description" content={description} />
  <link rel="shortcut icon" href={imageUrl} type="image/jpg" />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={Astro.url} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={`https://orealy.tech${imageUrl}`} />

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={Astro.url} />
  <meta property="twitter:title" content={title} />
  <meta property="twitter:description" content={description} />
  <meta property="twitter:image" content={`https://orealy.tech${imageUrl}`} />
</head>
