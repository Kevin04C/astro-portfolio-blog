---
import Project from "./Project.astro";
import projects from "../data/projects.json";
---

<section id="proyectos" class="my-32">
  <h3 class="text-4xl md:text-5xl font-extrabold text-primary-900 mb-10">
    MIS PROYECTOS
  </h3>

  <div class="grid grid-cols-projects gap-8">
    {projects.map((p) => <Project {...p} />)}
  </div>
</section>
